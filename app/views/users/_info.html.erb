<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>

<div class="row">
  <%= link_to edit_user_path(user.id), class: "col-12 btn btn-secondary", data: {"turbolinks" => false} do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
