<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <div class="error-message">
          <h3><%= @book.errors.count %>
              error prohibited this obj from being saved:
          </h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @book do |f| %>
        <div class="row field">
          <h4>Title</h4>
          <%= f.text_field :title, class:"col-12 form-control" %>
        </div>
        <div class="row field">
          <h4>Opinion</h4>
          <%= f.text_area :body, class:"col-12 form-control" %>
        </div>
        <div class="row field">
          <%= f.submit "Update Book", class:"col-3 btn btn-success" %>
        </div>
      <% end %>

      <%= link_to "Show", book_path(@book) %>
      <span>|</span>
      <%= link_to "Back", books_path %>
    </div>
    <div class="col-3"></div>
  </div>
</div>