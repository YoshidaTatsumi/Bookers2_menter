<h2>New book</h2>
<%= form_with model:book do |f| %>
	<div class="field row">
		<label>Title</label>
		<%= f.text_field :title, class:"col-12" %>
	</div>
	<div class="field row">
		<label>Opinion</label>
		<%= f.text_area :body, class:"col-12" %>
	</div>
	<div class="field row">
		<%= f.submit "Create Book", class:"col-12 btn btn-primary" %>
	</div>
<% end %>